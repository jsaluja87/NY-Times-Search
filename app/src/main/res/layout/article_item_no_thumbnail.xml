<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="1dp"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:focusable="true"
        android:padding="@dimen/article_item_padding"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/article_item__no_thumb_text_pad"
            android:id="@+id/RvNoThumbMainId"
            android:maxLines="2"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/article_item_head_line_size"
            android:typeface="serif"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RvNoThumbNewsDeskId"
            android:textSize="@dimen/article_item_text_size"
            android:layout_below="@+id/RvNoThumbMainId"
            android:layout_alignParentStart="true"
            android:background="@color/FilterFragmentTheme"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="TextView2"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_below="@+id/RvNoThumbNewsDeskId"
            android:id="@+id/RvNoThumbSnippetId"
            android:textSize="@dimen/article_item_text_size"
            android:gravity="center"
            android:text="TextView3"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>